<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--vista en forma de formulario-->
        <record model="ir.ui.view" id="nave_view_form">
            <field name="name">nave.espacial.form</field>
            <field name="model">nave.espacial</field>
            <field name="arch" type="xml">
                <!--Le damos una nombre a la vista-->
                <form string="Formulario de Nave">
                    <!--Definimos la vista, en cla cual le podrnemos lo campso que se desean ver -->
                    <sheet>
                        <h1><field name="name"/></h1>
                        <group>
                            <group>
                                <field name="active"/>
                            </group>
                            <group>
                                <field name="dimensiones_de_la_nave"/>
                                <field name="tipo_de_combustible"/>
                                <field name="tipo_de_nave"/>
                                <field name="numero_de_pasajeros"/>
                                <field name="estatus_de_la_nave"/>
                            </group>   
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
         <record model="ir.ui.view" id="nave_view_list">
            <field name="name">nave.espacial.list</field>
            <field name="model">nave.espacial</field>
            <field name="arch" type="xml">
                <!--Le damos una nombre a la vista-->
                <tree string="Formulario de Nave">
                    <!--Definimos la vista, en cla cual le podrnemos lo campso que se desean ver -->
                    <field name="name"/>
                    <field name="tipo_de_nave"/>
                    <field name="numero_de_pasajeros"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>
