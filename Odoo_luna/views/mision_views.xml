<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="mision_view_form">
            <field name="name">nave.mision.form</field>
            <field name="model">nave.mision</field>
            <field name="arch" type="xml">
                <form string ="Formulario de Misiones">
                    <sheet>
                        <h1><field name='name'/></h1>
                        <group>
                            <group>
                                <field name="nave_id"/>
                                <field name="fecha_de_lazamiento"/>
                                <field name="fecha_de_regreso"/>
                            </group>
                            <group>
                                <field name="cantidad_combustible"/>
                                <field name="numero_de_motores"/>
                                <field name="seguridad"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Miembros de la nave">
                                <field name="miembros_de_la_nave"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="mision_view_graph">
            <field name="name">nave.mision.graph</field>
            <field name="model">nave.mision</field>
            <field name="arch" type="xml">
                <graph type="bar">
                    <field name="nave_id"/>
                    <field name="cantidad_combustible"/>
                    <field name="numero_de_motores"/> 
                    <field name="seguridad"/>
                </graph>
            </field>
        </record>
    </data>
</odoo>